<!DOCTYPE html>
<div class="nav navUser">
    <h3 id="logo">HuddleUp</h3>
    <div class="welcome">
        <p>Welcome, {{session.user}}!</p>
        {{#if session.user}}
            <a href="/logout" id="logout">Logout</a>
        {{/if}}
    </div>
</div>


<div class="background">

</div>
<div class="dashboard">
    <h3 class="myTeams">My Teams:</h3>
    <div class="teams">
        {{#each teams}}
            <h4><a href="/team/{{id}}">{{teamname}}</a></h4>
        {{/each}}

        {{#each coachteams}}
            <h4><a href="/team/{{id}}">{{teamname}} *</a></h4>
        {{/each}}
        {{#if coachteams}}
        <p>* Inidcates you coach this team.</p>
        {{/if}}
    </div>
    <div class="teamButtons">
        <a href="/createTeam" class="submitButton">Create Team</a>
        <button type="button" name="button" class="joinTeamButton submitButton">Join Team</button>
    </div>

</div>
